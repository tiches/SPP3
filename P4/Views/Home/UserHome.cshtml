@using DatingAppLibrary

@model UserProfile

@{
    Layout = null; // Remove layout to avoid duplication of header
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        /* Custom Styles */
        .navbar-custom {
            background-color: #FF007F !important; /* Cherry red color */
        }

        .profile-image {
            width: 200px; /* Adjust according to your design */
            height: 200px; /* Adjust according to your design */
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <!-- Bootstrap Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Your Dating App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("UserHome", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ProfileEdit")">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "BrowseProfiles")">Search Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ViewLikes")">View Likes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Matches")">View Matches</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ViewDates")">View Dates</a>
                </li>
            </ul>
            <!-- Add any additional navigation items or buttons here -->
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <!-- Main Content Column -->
            <div class="col-md-8">
                <!-- Main Content Here -->
            </div>
            <!-- User Profile Card Column -->
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@Model.ProfilePhotoURL" alt="Profile Image">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Address, @Model.City, @Model.State</p>
                        <!-- Add other profile details here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>