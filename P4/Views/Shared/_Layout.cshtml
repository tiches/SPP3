<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        /* Custom Styles */
        .navbar-custom {
            background-color: #FF007F !important; /* Cherry red color */
        }

        .profile-image {
            width: 200px; /* Adjust according to your design */
            height: 200px; /* Adjust according to your design */
            border-radius: 50%;
            object-fit: cover;
        }

        /* Basic Color Theming */
        body {
            background-color: #f8f9fa; /* Light gray background color */
        }
    </style>
</head>
<body>
    <!-- Bootstrap Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
        <a class="navbar-brand" href="#">Your Dating App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("UserHome", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ProfileEdit")">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "BrowseProfiles")">Search Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">View Likes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">View Matches</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">View Dates</a>
                </li>
            </ul>
            <!-- Add any additional navigation items or buttons here -->
        </div>
    </nav>

    <!-- Content Section -->
    <div class="container mt-5">
        @RenderBody() <!-- Render specific page content here -->
    </div>
</body>
</html>